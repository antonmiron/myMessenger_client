<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llIncomingChatMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_margin="@dimen/size8"
        android:background="@drawable/shape_message_left"
        android:orientation="vertical"
        android:paddingStart="@dimen/size16"
        android:paddingTop="@dimen/size16"
        android:paddingEnd="@dimen/size16"
        android:paddingBottom="@dimen/size8">

        <TextView
            android:id="@+id/tvIncomingChatUserNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textStyle="bold"
            tools:text="Иван Иванов"/>

        <TextView
            android:id="@+id/tvIncomingChatMessageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/size24"
            tools:text="Всем привет! Бла Бла Бла." />

        <TextView
            android:id="@+id/tvIncomingChatMessageTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textSize="@dimen/small"
            tools:text="12:30" />

    </LinearLayout>
</FrameLayout>